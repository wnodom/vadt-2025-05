{
  "name": "unit-tests",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/unit-tests/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": {
          "base": "dist/apps/unit-tests",
          "browser": ""
        },
        "index": "apps/unit-tests/src/index.html",
        "browser": "apps/unit-tests/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/unit-tests/tsconfig.app.json",
        "assets": [
          "apps/unit-tests/src/favicon.ico",
          "apps/unit-tests/src/assets",
          {
            "glob": "**/*",
            "input": "libs/shared/assets/abc",
            "output": "/assets/"
          },
          {
            "glob": "**/*",
            "input": "libs/shared/assets/shared",
            "output": "/assets/"
          }
        ],
        "styles": [
          "apps/unit-tests/src/styles.scss",
          "libs/shared/styles/abc/shared.scss",
          "libs/shared/styles/shared/shared.scss"
        ],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/shared/styles/abc",
            "libs/shared/styles/shared",
            "node_modules/@angular/material"
          ]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@class-materials/tooling:serve-step",
      "options": {
        "serveTarget": "unit-tests:ng-serve"
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "unit-tests:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/unit-tests/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "unit-tests:build",
        "port": 4300
      }
    },
    "ng-serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4300,
        "proxyConfig": "proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "unit-tests:build:production"
        },
        "development": {
          "buildTarget": "unit-tests:build:development"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    }
  }
}
